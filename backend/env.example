# Configuração da Aplicação
PORT=3001
NODE_ENV=development

# Configuração do Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-chave-anonima-aqui

# Configuração direta do PostgreSQL (para migrations e queries diretas)
SUPABASE_HOST=sua-db-host.supabase.co
SUPABASE_PORT=5432
SUPABASE_DATABASE=postgres
SUPABASE_USER=postgres
SUPABASE_PASSWORD=sua-senha-aqui

# JWT Secret (para autenticação futura)
JWT_SECRET=sua-chave-secreta-jwt-super-segura-aqui

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# Configurações de Upload
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000 